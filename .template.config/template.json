{
  "$schema": "http://json.schemastore.org/template",
  "author": "Andrei1128",
  "classifications": ["C#", "Modular Monolith", "API", "Web", "Web API"],
  "identity": "Andrei1128.ModularMonolithAPI",
  "name": "Modular Monolith Template",
  "shortName": "modular-monolith-api",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "ModularMonolithTemplate",
  "preferNameDirectory": true,
  "postActions": [
    {
      "description": "Remove Git and VS configuration folders and files",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "cmd",
        "args": "/c rmdir /s /q .git .vs & del /q .gitattributes .gitignore README.md"
      },
      "manualInstructions": [
        {
          "text": "Delete .git, .vs, .gitattributes, .gitignore, and README.md manually if not removed."
        }
      ],
      "continueOnError": true
    },
    {
      "description": "Remove Git and VS configuration folders and files (Linux/macOS)",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "bash",
        "args": "-c \"rm -rf .git .vs .gitattributes .gitignore README.md\""
      },
      "manualInstructions": [
        {
          "text": "Delete .git, .vs, .gitattributes, .gitignore, and README.md manually if not removed."
        }
      ],
      "continueOnError": true
    }
  ]
}
